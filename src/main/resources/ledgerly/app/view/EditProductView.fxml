<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="ledgerly.app.controller.EditProductController"
      alignment="CENTER_LEFT" spacing="15"
      styleClass="modal-root" prefWidth="350">

    <padding>
        <Insets top="20" right="30" bottom="20" left="30"/>
    </padding>

    <Label text="Edit Product" styleClass="title-label-edit" alignment="CENTER"/>

    <VBox spacing="5">
        <Label text="Product Name" styleClass="subtitle-label"/>
        <TextField fx:id="productNameField" promptText="Enter new product name"/>
    </VBox>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Cancel" onAction="#handleCancel" styleClass="cancel-button"/>
        <Button fx:id="saveButton" text="Save Changes" onAction="#handleSave" styleClass="add-button"/>
    </HBox>
</VBox>
