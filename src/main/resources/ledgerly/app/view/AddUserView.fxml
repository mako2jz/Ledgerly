<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="ledgerly.app.controller.AddUserController"
      alignment="CENTER_LEFT" spacing="15"
      styleClass="root" prefWidth="350">

    <padding>
        <Insets top="20" right="30" bottom="20" left="30"/>
    </padding>

    <Label text="Add New User" styleClass="title-label" alignment="CENTER"/>

    <VBox spacing="1">
        <Label text="Username" styleClass="subtitle-label"/>
        <TextField fx:id="usernameField" promptText="Enter a username"/>
    </VBox>

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancel" styleClass="cancel-button"/>
        <Button fx:id="createUserButton" text="Create User" onAction="#handleCreateUser" styleClass="add-button"/>
    </HBox>
</VBox>
