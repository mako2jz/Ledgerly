<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="ledgerly.app.controller.EditSaleController"
      alignment="CENTER_LEFT" spacing="15"
      styleClass="modal-root" prefWidth="450">

    <padding>
        <Insets top="20" right="30" bottom="20" left="30"/>
    </padding>

    <Label text="Edit Sale" styleClass="title-label" alignment="CENTER"/>

    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints hgrow="NEVER" minWidth="100"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>

        <Label text="Sale ID:" styleClass="subtitle-label" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <Label fx:id="saleIdLabel" styleClass="text-field" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Date:" styleClass="subtitle-label" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <Label fx:id="dateLabel" styleClass="text-field" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    </GridPane>

    <VBox spacing="5">
        <Label text="Product" styleClass="subtitle-label"/>
        <ComboBox fx:id="productComboBox" promptText="Search or select a product" maxWidth="Infinity" editable="true"/>
    </VBox>

    <VBox spacing="5">
        <Label text="Amount (â‚±)" styleClass="subtitle-label"/>
        <TextField fx:id="amountField" promptText="e.g., 150.75"/>
    </VBox>

    <VBox spacing="5">
        <Label text="Description (Optional)" styleClass="subtitle-label"/>
        <TextArea fx:id="descriptionArea" promptText="Enter a short description" prefHeight="80" wrapText="true"/>
    </VBox>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Cancel" onAction="#handleCancel" styleClass="cancel-button"/>
        <Button fx:id="saveButton" text="Save Changes" onAction="#handleSave" styleClass="add-button"/>
    </HBox>
</VBox>
